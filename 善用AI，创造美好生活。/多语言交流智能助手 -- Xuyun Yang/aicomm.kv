<MyFormSearch@BoxLayout>:  # 定义另一个Widgets
    Button:
        text:"Searching results."

<MyFormBook1@BoxLayout>:  # 定义另一个Widgets
    Button:
        text:"Book1"

<MyFormBook2@BoxLayout>:  # 定义另一个Widgets
    Button:
        text:"Book2"

<TranslateOutput@MySubForm>:  # 定义另一个Widgets
    BoxLayout:                # 定义子GUI部件
        height:"40dp"         # 高度
        size_hint_y:None      # 纵向占比

        Label:
            text:root.translate_res
            size_hint_x:100